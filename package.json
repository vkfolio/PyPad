{
  "name": "pythonpad",
  "displayName": "PythonPad",
  "description": "DartPad-like Python playground with multi-file support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pythonpad.open",
        "title": "PythonPad: Open Playground",
        "category": "PythonPad"
      },
      {
        "command": "pythonpad.setWorkspaceFolder",
        "title": "PythonPad: Set Workspace Folder",
        "category": "PythonPad"
      }
    ],
    "configuration": {
      "title": "PythonPad",
      "properties": {
        "pythonpad.formatter": {
          "type": "string",
          "enum": [
            "black",
            "autopep8",
            "none"
          ],
          "default": "black",
          "description": "Python code formatter to use"
        },
        "pythonpad.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically format code on save"
        },
        "pythonpad.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense (autocomplete)"
        },
        "pythonpad.lineLength": {
          "type": "number",
          "default": 88,
          "description": "Maximum line length for formatters"
        },
        "pythonpad.theme": {
          "type": "string",
          "enum": [
            "dark",
            "light"
          ],
          "default": "dark",
          "description": "Editor theme"
        },
        "pythonpad.fontSize": {
          "type": "number",
          "default": 14,
          "description": "Editor font size"
        },
        "pythonpad.workspaceFolder": {
          "type": "string",
          "default": "",
          "description": "Folder where PythonPad files are stored"
        },
        "pythonpad.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/python-extension": "^1.0.5",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "string-argv": "^0.3.2"
  }
}
